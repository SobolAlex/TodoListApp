<Window x:Class="TodoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoListApp.ViewModels"
        mc:Ignorable="d"
        Title="Список задач" Height="700" Width="1000">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Левая колонка: кнопка и список -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- для кнопки -->
                <RowDefinition Height="*"/>
                <!-- для списка, занимает всё оставшееся место -->
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="Добавить новую задачу" Command="{Binding AddCommand}" Margin="0,0,0,10" Width="170"/>

            <ListBox Grid.Row="1" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <CheckBox Content="{Binding Title}" IsChecked="{Binding IsCompleted}" />
                            <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="20,0,0,5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Правая колонка: редактирование -->
        <StackPanel Grid.Column="1" Margin="10,20,0,0">
            <TextBox Style="{StaticResource PlaceholderTextBox}" Tag="Введите описание задачи" AcceptsReturn="True" Height="100" Margin="10"
                 Text="{Binding SelectedTask.Description,
                        Mode=TwoWay,
                        TargetNullValue=''}" />

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Добавлено: " Margin="10" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SelectedTask.CreatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Margin="10" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Обновлено: " Margin="10" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SelectedTask.EditedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}, TargetNullValue=—}" Margin="10" />
            </StackPanel>

            <!-- Кнопки "Удалить" "Очистить список" "Сохранить" -->
            <Button Content="Удалить задачу" Command="{Binding RemoveCommand}" FontWeight="SemiBold" Margin="10"/>
            <Button Content="Сохранить" Command="{Binding SaveCommand}" FontWeight="SemiBold" Margin="10"/>
            <Button Content="Очистить список" Command="{Binding RemoveAllCommand}" FontWeight="SemiBold" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>